<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Chat_App">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_round_chat_bubble_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_round_chat_bubble_24"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Registered_Contacts" />
        <activity android:name=".VerificationActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LogInActivity"/>
        <activity android:name=".StartingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Contact_Messages" />
        <activity android:name=".Global" />
    </application>

</manifest>